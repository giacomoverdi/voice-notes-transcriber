# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080

# Database
DB_USER=voicenotes
DB_PASSWORD=voicenotes123
DB_NAME=voicenotes
DATABASE_URL=postgresql://voicenotes:voicenotes123@localhost:5432/voicenotes

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Postmark Configuration
POSTMARK_SERVER_TOKEN=your-postmark-server-token
POSTMARK_INBOUND_ADDRESS=your-unique-id@inbound.postmarkapp.com
POSTMARK_FROM_EMAIL=noreply@yourdomain.com
POSTMARK_WEBHOOK_TOKEN=your-webhook-validation-token

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=whisper-1
OPENAI_GPT_MODEL=gpt-4-turbo-preview

# Notion Integration (Optional)
NOTION_API_KEY=your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id
NOTION_SYNC_ENABLED=false

# Google API Speech To Text
GOOGLE_APPLICATION_CREDENTIALS=your-json-credential-file

# Email Settings
EMAIL_VERIFICATION_REQUIRED=false
EMAIL_DOMAIN_WHITELIST=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=26214400
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/mp3,audio/wav,audio/x-wav,audio/mp4,audio/x-m4a,audio/ogg,audio/webm,audio/flac

# Frontend Configuration
VITE_API_URL=http://localhost:3000
VITE_WEBSOCKET_URL=ws://localhost:3000

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
ENABLE_TRANSCRIPTION_QUEUE=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_NOTION_SYNC=false
ENABLE_ANALYTICS=false