# Backend Environment Configuration

# Application
NODE_ENV=development
PORT=3000

# Database
DB_USER=voicenotes
DB_PASSWORD=voicenotes123
DB_NAME=voicenotes
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://voicenotes:voicenotes123@localhost:5432/voicenotes

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=7d

# Postmark
POSTMARK_SERVER_TOKEN=your-postmark-server-token
POSTMARK_INBOUND_ADDRESS=your-unique-id@inbound.postmarkapp.com
POSTMARK_FROM_EMAIL=noreply@yourdomain.com
POSTMARK_WEBHOOK_TOKEN=your-webhook-validation-token

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=whisper-1
OPENAI_GPT_MODEL=gpt-4-turbo-preview

# Notion (Optional)
NOTION_API_KEY=
NOTION_DATABASE_ID=
NOTION_SYNC_ENABLED=false

# Google Credentials
GOOGLE_APPLICATION_CREDENTIALS=your-json-path

# Email Settings
EMAIL_VERIFICATION_REQUIRED=false
EMAIL_DOMAIN_WHITELIST=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=26214400
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/mp3,audio/wav,audio/x-wav,audio/mp4,audio/x-m4a,audio/ogg,audio/webm,audio/flac

# Logging
LOG_LEVEL=info

# FFmpeg paths (optional, if not in PATH)
FFMPEG_PATH=
FFPROBE_PATH=